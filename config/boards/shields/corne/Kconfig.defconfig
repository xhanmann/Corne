if SHIELD_CORNE_LEFT

config ZMK_KEYBOARD_NAME
    default "Corne"

config ZMK_SPLIT_ROLE_CENTRAL
    default y
endif

if SHIELD_CORNE_LEFT || SHIELD_CORNE_RIGHT

config ZMK_SPLIT
    default y
endif

if ZMK_DISPLAY

config I2C
    default y

config SSD1306
    default y

endif

if ZMK_BACKLIGHT

config ZMK_BACKLIGHT_BRT_STEP
    default 20

config ZMK_BACKLIGHT_BRT_START
    default 40

config ZMK_BACKLIGHT_ON_START
    default y

config PWM
    default y

config LED_PWM
    default y

endif # ZMK_BACKLIGHT

# Enable RGB Underglow
CONFIG_ZMK_RGB_UNDERGLOW=y

# Set the number of RGB LEDs in your keyboard
CONFIG_ZMK_RGB_UNDERGLOW_NUM=10

# Enable advanced effects (e.g., breathing, rainbow, etc.)
CONFIG_ZMK_RGB_UNDERGLOW_EFFECT_BREATHING=y
CONFIG_ZMK_RGB_UNDERGLOW_EFFECT_RAINBOW=y

# Set the default brightness level (0-255)
CONFIG_ZMK_RGB_UNDERGLOW_BRIGHTNESS=128

# Set the default effect mode (e.g., "rainbow" or "solid")
CONFIG_ZMK_RGB_UNDERGLOW_DEFAULT_EFFECT="rainbow"

# Enable the ability to adjust RGB settings via keycodes
CONFIG_ZMK_RGB_UNDERGLOW_KEYPRESS=y

CONFIG_WS2812_STRIP=y
CONFIG_WS2812_PIN=0

endif
